<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:ignore="UselessParent">
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/studentImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="@string/logo_image" />
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studentImage"
            android:textSize="25sp"
            android:textColor="#000"
            android:text="Name: "/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_below="@+id/studentImage"
            android:layout_width="wrap_content"
            android:id="@+id/studentNameInfo"
            android:layout_toRightOf="@id/studentName"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#000"
            android:text="Gerald Francis"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/studentRegNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studentName"
            android:textSize="25sp"
            android:textColor="#000"
            android:text="Reg No: "/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/studentName"
            android:layout_width="wrap_content"
            android:id="@+id/studentNameRegNoInfo"
            android:layout_toRightOf="@id/studentRegNo"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#000"
            android:text="160230220354"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/studentDep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studentRegNo"
            android:textSize="25sp"
            android:textColor="#000"
            android:text="Department: "/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/studentRegNo"
            android:layout_width="wrap_content"
            android:id="@+id/studentNameRegDepInfo"
            android:layout_toRightOf="@id/studentDep"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#000"
            android:text="Computer Study"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/studentYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studentDep"
            android:textSize="25sp"
            android:textColor="#000"
            android:text="Year: "/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/studentDep"
            android:layout_width="wrap_content"
            android:id="@+id/studentNameYearInfo"
            android:layout_toRightOf="@id/studentYear"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#000"
            android:text="Second Year"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/studentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studentYear"
            android:textSize="25sp"
            android:textColor="#000"
            android:text="Status: "/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/studentYear"
            android:layout_width="wrap_content"
            android:id="@+id/studentStatusInfo"
            android:layout_toRightOf="@id/studentStatus"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#F1D207"
            android:text="Registered"/>

    </RelativeLayout>
</RelativeLayout>